<h1><%= t('editing menu') %></h1>

<% form_for(item.resource, :html => { :name => "menu_#{item.resource.id}" }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label t('menu_type') %><br />
    <%= f.collection_select( :menu_type_id, t_collection(MenuType.find(:all)), :id, :name) -%>
  </p>
  <p>
    <%= f.label t('menu depth') %><br />
    <%= f.spinbox_field :depth, :min => 0, :max => 120, :html => {:value => item.resource.depth} %>
  </p>
  <p>
    <%= f.submit_with_javascript( t('update')) %>
  </p>
<% end %>

