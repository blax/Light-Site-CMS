<h1>Listing pages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Language</th>
    <th>Parent</th>
  </tr>

<% for page in @pages %>
  <tr>
    <td><%=h page.name %></td>
    <td><%=h page.language_id %></td>
    <td><%=h page.parent_id %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', "/pages/#{page.id}/edit" %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New page', new_page_path %>
