<h1>New quota</h1>

<% form_for(@quota) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.ckeditor_field :content %>
  </p>
  <p>
    <%= f.label :speaker %><br />
    <%= f.text_field :speaker %>
  </p>
  <p>
    <%= f.label :company %><br />
    <%= f.text_field :company %>
  </p>
  <p>
    <%= f.label :language_id %><br />
    <%= f.collection_select( :language_id, Language.find(:all), :id, :name) -%>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', quotas_path %>
