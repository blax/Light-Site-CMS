<h1><%= t('new news') %></h1>

<% form_for(@news, :url => {:action => :create}, :html => { :multipart => true }) do |f| -%>
  <%= f.error_messages %>

  <p>
    <%= f.label t('header')+':' %><br />
    <%= f.text_field :header %>
  </p>
  <p>
    <%= f.label t('content')+':' %><br />
    <%= f.ckeditor_field :content %>
  </p>
  <p>
    <%= f.submit t('create') %>
  </p>
<% end %>

<%= link_to t('back'), plain_texts_path %>
